            <input type="checkbox" id="foreign" name="foreign">
            <label for="foreign">Ξένη Λογοτεχνία</label><br>
            <input type="checkbox" id="kids" name="kids">
            <label for="kids">Παιδικά Βιβλία</label><br>
            <input type="checkbox" id="academic" name="academic">
            <label for="academic">Πανεπιστημιακά συγγράμματα</label><br>
            <input type="checkbox" id="scientific" name="scientific">
            <label for="scientific">Eπιστημονικά βιβλία</label></div><br>
            <button type="submit" value="submit" id="submit">Αναζήτηση</button>
        </form>
        </fieldset>
    </div>


    <div class="best-sellers">

    {{#each books}}
    <div class="best-seller">
        <a href="/book/{{titlos}}">
            <img src="/images/{{titlos}}.jpg" alt="{{normal_titlos}}">
            <h3>{{normal_titlos}}</h3>
        </a>
    </div>
    {{/each}}

