<div class="draft-data">
    <fieldset>
        <form action="/review/{{id}}" method="get">
            <h2>Στοιχεία αιτήματος</h2>
            <h3>Αριθμός αιτήματος</h3>
            <a>{{id}}</a>
            <h3>Συγγραφέας</h3>
            <a>{{name}}</a>
            <h3>Τίτλος</h3>
            <a>{{title}}</a>
            <h3>Κατηγορία</h3>
            <a>{{category}}</a>
            <h3>Αριθμός λέξεων</h3>
            <a>{{words}}</a>
            <h3>Περίληψη</h3>
            <a href="{{abstract}}">Περίληψη</a>
            <h3>Σύντομη ανάλυση</h3>
            <a href="{{analysis}}">Σύντομη ανάλυση</a>
            <h3>Ενδεικτικό απόσπασμα</h3>
            <a href="{{snippet}}">Ενδεικτικό απόσπασμα</a>
            <h3>Σχόλια</h3>
            <a>{{comments}}</a>
            <h3>Κατάσταση αιτήματος</h3>
            {{#unless isReviewed}}
                <a>Έχει υποβληθεί</a>
            {{/unless}}
            {{#if isAccepted}}
                <a style="color: green">Έχει εγκριθεί</a>
            {{/if}}
            {{#unless isAccepted}}
                {{#if isReviewed}}
                    <a style="color: red">Έχει αποριφθεί</a>
                {{/if}}
            {{/unless}}
            <h3>Σχόλια διαχείρισης</h3>
            {{#unless admin}}
                <a>{{adminComments}}</a>
            {{/unless}}
            {{#if admin}}
                <textarea id="admincomments" name="admincomments" rows="3" placeholder="{{adminComments}}"></textarea>
                <br>
                <select name="edit" id="edit">
                    <option value="approve">Έγκριση αιτήματος</option>
                    <option value="reject">Απόρριψη αιτήματος</option>
                    <option value="delete">Διαγραφή αιτήματος</option>
                </select><br>
                <button type="submit" name="update" value="update" id="update">Ενημέρωση αιτήματος</button>
            {{/if}}
        </form>
        <br><br>
    </fieldset>
</div>