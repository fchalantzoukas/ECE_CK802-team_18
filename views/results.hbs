<h2 style="text-align: center;">{{page_title}}</h2>


<div class="books-list">
    <div class="filters">
        <a id="testtext">Φίλτρα</a><br><br>
        <fieldset>
        <form action="/results" method="post">
            <label for="title">Τίτλος Βιβλίου</label><br>
            <input type="text" id="title" name="booktitle"><br>
            <label for="isbn">ISBN</label><br>
            <input type="number" id="isbn" name="bookisbn"><br>
            <label for="year">Έτος κυκλοφορίας</label><br>
            <input type="number" id="year" name="bookyear"><br>
            <label for="author">Συγγραφέας</label><br>
            <input type="text" id="author" name="bookauthor"><br>
            <label for="category">Κατηγορία</label><br>
            <input type="text" id="category" name="bookcategory"><br>
            <br>
            <button type="submit" value="submit" id="submit">Αναζήτηση</button>
        </form>
        </fieldset>
    </div>


    <div class="book-results">

    {{#each books}}
    <div class="book">
        <a href="/book/{{title}}">
            <img src="/images/{{title}}.jpg" alt="{{normal_title}}">
            <h3>{{normal_title}}</h3>
        </a>
    </div>
    {{/each}}

